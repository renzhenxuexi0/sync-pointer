{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "sync-pointer",
    "version": "0.1.0",
    "identifier": "com.sync-pointer.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Sync Pointer",
                "width": 600,
                "height": 800
            }
        ],
        "security": {
            "capabilities": ["core", "log"],
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
