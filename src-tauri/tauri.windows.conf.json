{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "sync-pointer",
    "version": "0.1.0",
    "identifier": "com.sync-pointer.app",
    "bundle": {
        "targets": "nsis",
        "windows": {
            "nsis": {
                "compression": "lzma",
                "displayLanguageSelector": true,
                "languages": [
                    "SimpleChinese",
                    "English"
                ],
                "installerHooks": "./windows/hook.nsi"
            },
            "webviewInstallMode": {
                "type": "embedBootstrapper"
            }
        }
    }
}